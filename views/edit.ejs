<% include partials/header%>



<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit <%= campgournd.name%></h1>
        <div style="width: 30%; margin :25px auto;">
            <form action="/campgrounds/<%= campgournd._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campgournd.name%>" name="campgournd[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%= campgournd.price%>" name="campgournd[price]" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campgournd.image%>" name="campgournd[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campgournd.description%>" name="campgournd[description]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
        `   </form>
         <a href="/campgrounds">Go Back</a>
        </div>
       
    </div>
</div>
<% include partials/footer%>